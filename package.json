{
  "name": "angular-elctron-starter",
  "version": "1.0.0",
  "description": "An angular starter kit based on electron.",
  "scripts": {
    "start": "concurrently \"npm run build:dev\" \"npm run electron:dev\"",
    "test": "karma start",
    "build": "rimraf dist && webpack --config config/webpack.prod.ts --progress --profile --bail",
    "build:dev": "webpack-dev-server",
    "electron": "electron .",
    "electron:dev": "electron src/entry.live.js",
    "package:linux": "npm run build && cross-var electron-packager ./dist $npm_package_name-$npm_package_version --out=packages --platform=linux --overwrite",
    "package:mac": "npm run build && cross-var electron-packager ./dist $npm_package_name-$npm_package_version --out=packages --platform=darwin --overwrite",
    "package:win": "npm run build && cross-var electron-packager ./dist $npm_package_name-$npm_package_version --out=packages --platform=win32 --overwrite",
    "package:all": "npm run build && cross-var electron-packager ./dist $npm_package_name-$npm_package_version --out=packages --all --overwrite",
    "tslint": "tslint ./src/**/*.ts -t stylish"
  },
  "main": "dist/entry.js",
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^4.3.5",
    "@angular/common": "^4.3.5",
    "@angular/compiler": "^4.3.5",
    "@angular/compiler-cli": "^4.3.5",
    "@angular/core": "^4.3.5",
    "@angular/forms": "^4.3.5",
    "@angular/http": "^4.3.5",
    "@angular/platform-browser": "^4.3.5",
    "@angular/platform-browser-dynamic": "^4.3.5",
    "@angular/platform-server": "^4.3.5",
    "@angular/router": "^4.3.5",
    "core-js": "^2.5.1",
    "express": "^4.15.4",
    "lodash": "^4.17.4",
    "reflect-metadata": "^0.1.10",
    "rxjs": "5.4.3",
    "typescript": "^2.5.2",
    "zone.js": "^0.8.17"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/core-js": "^0.9.43",
    "@types/express": "^4.0.37",
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/jasmine": "^2.5.54",
    "@types/lodash": "^4.14.74",
    "@types/node": "^8.0.26",
    "@types/webpack": "^3.0.10",
    "angular-router-loader": "^0.6.0",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.2.3",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-var": "^1.0.3",
    "css-loader": "^0.28.7",
    "electron": "^1.7.5",
    "electron-packager": "^9.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "node-sass": "^4.5.3",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.15",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.3.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-loader": "^3.5.3",
    "webpack": "3.5.5",
    "webpack-dev-server": "2.7.1",
    "webpack-merge": "^4.1.0"
  }
}
