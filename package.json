{
  "name": "angular-electron-starter",
  "version": "1.0.0",
  "description": "An angular starter kit based on electron.",
  "scripts": {
    "start": "concurrently \"npm run build:dev\" \"npm run electron:dev\"",
    "test": "karma start",
    "build": "rimraf dist && webpack --config config/webpack.prod.ts --progress --profile --bail",
    "build:dev": "webpack-dev-server",
    "electron": "electron .",
    "electron:dev": "electron src/entry.live.js",
    "package:linux": "npm run build && cross-var electron-packager ./dist $npm_package_name-$npm_package_version --out=packages --platform=linux --overwrite",
    "package:mac": "npm run build && cross-var electron-packager ./dist $npm_package_name-$npm_package_version --out=packages --platform=darwin --overwrite",
    "package:win": "npm run build && cross-var electron-packager ./dist $npm_package_name-$npm_package_version --out=packages --platform=win32 --overwrite",
    "package:all": "npm run build && cross-var electron-packager ./dist $npm_package_name-$npm_package_version --out=packages --all --overwrite",
    "tslint": "tslint ./src/**/*.ts -t stylish"
  },
  "main": "dist/entry.js",
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^5.2.1",
    "@angular/common": "^5.2.1",
    "@angular/compiler": "^5.2.1",
    "@angular/compiler-cli": "^5.2.1",
    "@angular/core": "^5.2.1",
    "@angular/forms": "^5.2.1",
    "@angular/http": "^5.2.1",
    "@angular/platform-browser": "^5.2.1",
    "@angular/platform-browser-dynamic": "^5.2.1",
    "@angular/platform-server": "^5.2.1",
    "@angular/router": "^5.2.1",
    "core-js": "^2.5.3",
    "express": "^4.16.2",
    "reflect-metadata": "^0.1.12",
    "rxjs": "5.5.6",
    "typescript": "^2.5.2",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@types/chai": "^4.1.1",
    "@types/core-js": "^0.9.45",
    "@types/express": "^4.11.0",
    "@types/html-webpack-plugin": "^2.30.1",
    "@types/jasmine": "^2.8.4",
    "@types/lodash": "^4.14.93",
    "@types/node": "^9.3.0",
    "@types/webpack": "^3.8.3",
    "angular-router-loader": "^0.8.2",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.4.1",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "cross-var": "^1.1.0",
    "css-loader": "^0.28.9",
    "electron": "^1.8.2-beta.4",
    "electron-packager": "^10.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.30.1",
    "jasmine-core": "^2.9.1",
    "karma": "^2.0.0",
    "karma-jasmine": "^1.1.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.9",
    "node-sass": "^4.7.2",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.16",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "ts-loader": "^3.3.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.5.3",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.11.1",
    "webpack-merge": "^4.1.1"
  }
}
