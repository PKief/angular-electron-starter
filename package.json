{
  "name": "angular-elctron-starter",
  "version": "1.0.0",
  "description": "An angular starter kit based on electron.",
  "scripts": {
    "start": "concurrently \"npm run build:dev\" \"npm run electron:dev\"",
    "test": "karma start",
    "build": "rimraf dist && webpack --config config/webpack.prod.js --progress --profile --bail",
    "build:dev": "webpack-dev-server --inline --progress --port 3000",
    "electron": "electron .",
    "electron:dev": "electron src/entry.live.js",
    "package:linux": "cross-var electron-packager . $npm_package_name-$npm_package_version --ignore=src --ignore=e2e --ignore=.*\\.conf\\.js --ignore=\"(angular-cli|tsconfig)\\.json\" --ignore=webpack.*\\.js --out=packages --platform=linux --arch=all --overwrite",
    "package:mac": "cross-var electron-packager . $npm_package_name-$npm_package_version --ignore=src --ignore=e2e --ignore=.*\\.conf\\.js --ignore=\"(angular-cli|tsconfig)\\.json\" --ignore=webpack.*\\.js --out=packages --platform=darwin --arch=all --overwrite ",
    "package:win": "cross-var electron-packager . $npm_package_name-$npm_package_version --ignore=src --ignore=e2e --ignore=.*\\.conf\\.js --ignore=\"(angular-cli|tsconfig)\\.json\" --ignore=webpack.*\\.js --out=packages --platform=win32 --arch=all --overwrite ",
    "package:all": "cross-var electron-packager . $npm_package_name-$npm_package_version --ignore=src --ignore=e2e --ignore=.*\\.conf\\.js --ignore=\"(angular-cli|tsconfig)\\.json\" --ignore=webpack.*\\.js --out=packages --all --overwrite"
  },
  "main": "dist/entry.js",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "~2.4.6",
    "@angular/compiler": "~2.4.6",
    "@angular/core": "~2.4.6",
    "@angular/forms": "~2.4.6",
    "@angular/http": "~2.4.6",
    "@angular/platform-browser": "~2.4.6",
    "@angular/platform-browser-dynamic": "~2.4.6",
    "@angular/router": "~3.4.0",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "express": "^4.14.0",
    "lodash": "^4.17.2",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.1.1",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/core-js": "^0.9.35",
    "@types/electron": "^1.4.32",
    "@types/jasmine": "^2.5.38",
    "@types/lodash": "^4.14.41",
    "@types/node": "^7.0.5",
    "angular2-router-loader": "^0.3.4",
    "angular2-template-loader": "^0.6.0",
    "concurrently": "^3.3.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-var": "^1.0.2",
    "css-loader": "^0.26.0",
    "electron": "^1.6.0",
    "electron-packager": "^8.5.1",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.24.1",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "lite-server": "^2.2.2",
    "node-sass": "^4.3.0",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.13",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.1",
    "style-loader": "^0.13.1",
    "ts-loader": "^2.0.0",
    "tslint": "^4.0.2",
    "tslint-loader": "^3.3.0",
    "typescript": "^2.2.0",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.3.0",
    "webpack-merge": "^2.6.1"
  }
}